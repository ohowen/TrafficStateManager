<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#FFF" >

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gprs"
        android:layout_alignBottom="@+id/gprs"
        android:text="List" />

    <TextView
        android:id="@+id/alltraffic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="0M" />

    <TextView
        android:id="@+id/gprs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/alltraffic"
        android:layout_alignBottom="@+id/alltraffic"
        android:layout_marginRight="78dp"
        android:layout_toLeftOf="@+id/alltraffic"
        android:text="2g/3g" />

    <TextView
        android:id="@+id/wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gprs"
        android:layout_alignBottom="@+id/gprs"
        android:layout_marginRight="70dp"
        android:layout_toLeftOf="@+id/gprs"
        android:text="wifi" />

</RelativeLayout>
